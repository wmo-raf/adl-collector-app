<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive authentication data from cloud backup -->
        <exclude domain="sharedpref" path="tenant_prefs.xml" />
        <exclude domain="database" path="adl.db" />
        <exclude domain="database" path="adl.db-shm" />
        <exclude domain="database" path="adl.db-wal" />

        <!-- Include app settings and preferences that are safe to backup -->
        <include domain="sharedpref" path="app_settings.xml" />
    </cloud-backup>

    <device-transfer>
        <!-- For device-to-device transfer, exclude the same sensitive data -->
        <exclude domain="sharedpref" path="tenant_prefs.xml" />
        <exclude domain="database" path="adl.db" />
        <exclude domain="database" path="adl.db-shm" />
        <exclude domain="database" path="adl.db-wal" />

        <!-- Include non-sensitive app data -->
        <include domain="sharedpref" path="app_settings.xml" />
    </device-transfer>
</data-extraction-rules>