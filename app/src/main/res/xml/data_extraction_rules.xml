<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include everything by default -->
        <include
            domain="sharedpref"
            path="." />
        <include
            domain="database"
            path="." />
        <include
            domain="file"
            path="." />

        <!-- Exclude sensitive authentication data from cloud backup -->
        <exclude
            domain="sharedpref"
            path="tenant_prefs.xml" />
        <exclude
            domain="database"
            path="adl.db" />
        <exclude
            domain="database"
            path="adl.db-shm" />
        <exclude
            domain="database"
            path="adl.db-wal" />
    </cloud-backup>

    <device-transfer>
        <!-- Include everything by default -->
        <include
            domain="sharedpref"
            path="." />
        <include
            domain="database"
            path="." />
        <include
            domain="file"
            path="." />

        <!-- For device-to-device transfer, exclude the same sensitive data -->
        <exclude
            domain="sharedpref"
            path="tenant_prefs.xml" />
        <exclude
            domain="database"
            path="adl.db" />
        <exclude
            domain="database"
            path="adl.db-shm" />
        <exclude
            domain="database"
            path="adl.db-wal" />
    </device-transfer>
</data-extraction-rules>